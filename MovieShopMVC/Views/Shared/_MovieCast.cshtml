@model IEnumerable<ApplicationCore.Models.CastResponseModel>

@{
    ViewData["Title"] = "Cast";
}

<h4>Cast</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img class="rounded-circle" width="50px" height="50px" src= "@Html.DisplayFor(modelItem => item.ProfilePath)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Character)
            </td>
        </tr>
}
    </tbody>
</table>
